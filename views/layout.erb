<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>Drosophila bug tracking</title>
		<meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
		<meta name="description" content="Drosophila bug tracking system. " />
		<meta name="author" content="robinator" />
		<meta name="ROBOTS" content="ALL" />
		<link href="/stylesheets/main.css" rel="stylesheet" type="text/css" />
		<script src="/javascripts/jquery-1.3.1.min.js" type="text/javascript"></script>
	</head>
	<body>
		<div id="top">
			<h1><a href="/">Drosophila</a></h1>
			<% unless @project.nil? %>
			<h2><%= @project.name.capitalize %></h2>
			<% end %>
			<div id="menu">
				<ul>
				<li class=""><a href="/projects"><strong>Projects</strong></a><em id="" style="cursor: pointer;" onclick="$('#projects').toggle();"> ...</em>
					<ul class="" id="projects" style="display: none;">
						<% @projects.each do |project| %>
							<li class=""><a href="/projects/<%= project.name %>"><%= project.name.capitalize %></a></li>
						<% end %>
					</ul>
				</li>			
			</div>
		</div>
		<div id="middle">
			<%= yield %>
		</div>
		<div id="bottom">
			<% if session[:in] == 'yes' %>
			<a href="/logout">logout</a>
			<% else %>
			<a href="/login">login</a>
			<% end %>
		</div>
	</body>
</html>